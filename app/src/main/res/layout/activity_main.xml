<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/textViewMensagem"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/text_Mensagem"
       android:textAlignment="center"
       android:textSize="20sp"
       android:textColor="@android:color/white"
       android:background="@android:color/holo_green_dark"
       android:layout_margin="20dp"
       android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnManha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/black"
        android:text="@string/btn_manha"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnTarde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:layout_margin="20dp"
        android:text="@string/btn_tarde"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnNoite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:layout_margin="20dp"
        android:text="@string/btn_noite"
        android:textColor="@android:color/white" />

</LinearLayout>